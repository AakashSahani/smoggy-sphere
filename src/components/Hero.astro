---
import Header from './Header.astro';
import miyazaki from '../assets/miyazaki-art-show.webp';
---

<section
	class="flex flex-col h-screen w-screen bg-primary text-white sm:bg-hero sm:bg-right sm:bg-contain sm:bg-no-repeat py-10 px-20"
>
	<Header />
	<main class="flex flex-1">
		<div class="flex flex-col flex-1 justify-evenly w-1/2">
			<h1 class="font-bold text-5xl leading-snug">
				Hi, I am Aakash Sahani,<br /> A Web Developer, <br /> Based in Toronto.
			</h1>
			<ul class="flex flex-row gap-4">
				<li>
					<a
						href="#"
						class="button hover:text-accentYellow text-3xl hover:bg-accentYellow/25 hover:underline-offset-4"
						>Resume</a
					>
				</li>
				<li>
					<a
						href="#"
						class="button hover:text-accentGreen text-3xl hover:bg-accentGreen/25 hover:underline-offset-4"
						>Contact Me</a
					>
				</li>
			</ul>
		</div>
	</main>
</section>
